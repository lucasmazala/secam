<h1>New User</h1>

<!--using devise to create our form-->
<%= simple_form_for @user do |f|%>
    <div class="form-inputs"  >
        <%= f.input :name %>
        <%= f.input :coordination %>
        <%= f.input :telephone %>
        <%= f.input :email %>
        <%= f.input :company %>
        <div class="form-check form-switch">
            <%= f.input :cooperator, class:"form-check-input", type:"checkbox",role: "switch", id:"flexSwitchCheckDefault"%>
        </div>
    </div>
    <br>
    <div class="form-actions"  >
        <%= f.button :submit, class:"btn btn-primary" %>
        <%= link_to "Back", root_path, class: "btn btn-secondary"%>
    </div>
<%end%>

