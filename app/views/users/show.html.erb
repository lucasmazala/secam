<h4>User information</h4>
<table class="table table-dark table-hover">
    <thead>
        <tr>
             <th>ID</th>
            <th>Name</th>
            <th>Coordination</th>
            <th>Telephone</th>
            <th>email</th>
            <th>Company</th>
            <th>Cooperator</th>
        </tr>
    </thead>
    <tbody>
        <tr>
             <th><%= @user.id%></th>
            <th><%= @user.name%></th>
            <th><%= @user.coordination%></th>
            <th><%= @user.telephone%></th>
            <th><%=@user.email%></th>
            <th><%= @user.company%></th>
            <th><%=@user.cooperator%></th>
        </tr>
    </tbody>
</table>

<%= link_to "Edit User", edit_user_path(@user), class: "btn btn-primary"%>
<%= link_to "Back to Users", root_path, class: "btn btn-secondary"%>
<%= link_to "Destroy", user_path(@user),
    data: {
            turbo_method: :delete,
            turbo_confirm: "Are you sure?"
    }, class: "btn btn-danger" %>
