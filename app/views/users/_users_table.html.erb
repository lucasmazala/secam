<div id="collapse1" class="table-responsive overflow-y: hidden">
<table class="table table-responsive table-bordered table-dark table-hover caption-top overflow-y: hidden">
    <caption>List of users</caption>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Coordination</th>
            <th>Telephone</th>
            <th>Email</th>
            <th>Company</th>
            <th>Type</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        <% users.each do |user|%>
            <tr>
                <td><%= user.id%></td>
                <td><%= link_to user.name, user%></td> <!--first argument is the text, second is the path-->
                <td><%= user.coordination%></td>
                <td><%= user.telephone%></td>
                <td><%=user.email%></td>
                <td><%= user.company%></td>
                <td><%= user.type%></td>
                <td><%= link_to "Destroy", user_path(user),
    data: {
            turbo_method: :delete,
            turbo_confirm: "Are you sure?"
    }, class: "btn btn-danger" %> </td>
            </tr>
        <% end %>
    </tbody>
</table>
